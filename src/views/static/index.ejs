<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
  <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">
 <% include ../static/partials/messages.ejs %>
        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Welcome to Blocipedia</h1>
          <p class="lead">An application for users to share information.</p>
          <% if(!currentUser) { %>
          <a href="/users/signup" class="btn btn-primary btn-lg">Sign up</a>
          <% }%>
        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-4">
            <a href="https://codedubs-blocipedia.herokuapp.com/wikis"><h4 class="card-title">Create</h4></a>
            <p class="card-text">Join the Wiki community and collaborate on content that is important to you.</p>
          </section>

          <section class="col-lg-4">
            <h4 class="card-title">Collaborate</h4>
            <p class="card-text">Your opinion counts! But you have to make yourself heard first!</p>
          </section>

          <section class="col-lg-4">
            <h4 class="card-title">Share</h4>
            <p class="card-text">Get involved and share your public or private Wikis!</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      <% include ./partials/baseScripts.ejs %>
    </body>
</html>
