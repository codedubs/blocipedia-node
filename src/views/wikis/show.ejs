<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>
      <br>
<h5 style="text-decoration:underline"><a href="/wikis">back to wikis</a></h5>

      <br><br>
      <% if(currentUser) { %>
        <a href="/wikis/new" class="btn btn-success">New Wiki</a>
        <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>

        <% if(currentUser._isAdmin() || currentUser.id == wiki.userId) { %>
          <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        <% } %>

      <% } %>
      <br><br>
      <h1><%= wiki.title %></h1>
      <br><br>
      <p><%- wiki.body %></p>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
